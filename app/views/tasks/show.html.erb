<h2>タスク詳細</h2>

<table class="table">
  <tr><th>案件ID</th><td><%= @task.task_id %></td></tr>
  <tr><th>顧客名</th><td><%= @task.customer_name %></td></tr>
  <tr><th>受注日</th><td><%= @task.order_date %></td></tr>
  <tr><th>納期</th><td><%= @task.due_date %></td></tr>
  <tr><th>依頼区分</th><td><%= @task.request_type %></td></tr>
  <tr><th>依頼内容</th><td><%= @task.request_content %></td></tr>
  <tr><th>作業ステータス</th><td><%= @task.status.present? ? @task.status : "未設定" %></td></tr>
  <tr><th>社員ID</th><td><%= @task.employee_id %></td></tr>
  <tr><th>担当者</th><td><%= @task.assigned_person %></td></tr>
  <tr><th>部署名</th><td><%= @task.department_name %></td></tr>
  <tr><th>作業開始日</th><td><%= @task.start_date %></td></tr>
  <tr><th>作業完了日</th><td><%= @task.end_date %></td></tr>
  <tr><th>備考</th><td><%= @task.notes.present? ? @task.notes : "なし" %></td></tr>
  <tr><th>添付資料</th>
    <td>
      <% if @task.attachment.present? %>
        <% @task.attachment.each do |file| %>
          <%= link_to file.filename.to_s, rails_blob_path(file, disposition: "inline"), target: "_blank" %><br>
        <% end %>
      <% else %>
        なし
      <% end %>
    </td>
  </tr>
</table>

<div class="mt-3">
  <%= link_to "編集", edit_task_path(@task.task_id), class: "btn btn-warning" %>
  <%= link_to "削除", task_path(@task.task_id), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-danger" %>
  <%= link_to "一覧に戻る", tasks_path, class: "btn btn-secondary" %>
</div>