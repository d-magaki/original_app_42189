<h2>ユーザー詳細</h2>

<div class="card">
  <div class="card-body">
    <h4 class="card-title"><%= @user.user_name %> さん</h4>
    <p class="card-text"><strong>社員ID:</strong> <%= @user.employee_id %></p>
    <p class="card-text"><strong>メールアドレス:</strong> <%= @user.email %></p>
    <p class="card-text"><strong>所属部署:</strong> <%= @user.department %></p>

    <%= link_to "編集する", edit_user_path(@user), class: "btn btn-warning mt-3" %>

    <%= button_to "削除する", user_path(@user), method: :delete, data: { turbo_method: :delete, confirm: "本当に削除しますか？" }, class: "btn btn-danger mt-3" %>

    <%= link_to "一覧へ戻る", users_path, class: "btn btn-outline-primary mt-3" %>
  </div>
</div>