<h2>ユーザー一覧</h2>

<%= link_to "新規登録", new_user_registration_path, class: "btn btn-primary mb-3" %>

<table class="table table-hover">
  <thead>
    <tr>
      <th>ユーザーID</th>
      <th>名前</th>
      <th>メールアドレス</th>
      <th>部署</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr ondblclick="window.location.href='<%= user_path(user) %>'">
        <td><%= user.employee_id %></td>
        <td><%= user.user_name %></td>
        <td><%= user.email %></td>
        <td><%= user.department %></td>
      </tr>
    <% end %>
  </tbody>
</table>