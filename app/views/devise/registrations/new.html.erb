<div class="container">
  <h2>新規登録</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :post }) do |f| %>
    <div class="form-group">
      <%= f.label :employee_id, "ユーザーID" %>
      <%= f.text_field :employee_id, class: "form-control", required: true %>
    </div>

    <div class="form-group">
      <%= f.label :user_name, "社員名" %>
      <%= f.text_field :user_name, class: "form-control", required: true %>
    </div>

    <div class="form-group">
      <%= f.label :department, "所属部署" %>
      <%= f.text_field :department, class: "form-control", required: true %>
    </div>

    <div class="form-group">
      <%= f.label :email, "メールアドレス" %>
      <%= f.email_field :email, class: "form-control", required: true %>
    </div>

    <div class="form-group">
      <%= f.label :password, "パスワード" %>
      <%= f.password_field :password, class: "form-control", required: true %>
    </div>

    <%= f.submit "登録する", class: "btn btn-success" %>
      <% end %>
</div>