<div class="container">
  <h2>ログイン</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { method: :post }) do |f| %>
    <div class="form-group">
      <%= f.label :employee_id, "ユーザーID" %>
      <%= f.text_field :employee_id, class: "form-control", required: true %>
    </div>

    <div class="form-group">
      <%= f.label :password, "パスワード" %>
      <%= f.password_field :password, class: "form-control", required: true %>
    </div>

    <%= f.submit "ログイン", class: "btn btn-success" %>
  <% end %>
</div>